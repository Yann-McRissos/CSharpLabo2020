<Window x:Class="PersonalMapManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalMapManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Window.Resources>
		<!-- Custom presets for WPF controls -->
		<Style TargetType="{x:Type Grid}">
			<Setter Property="Background" Value="#FF2D2D30"/>
		</Style>
		<Style TargetType="{x:Type ScrollBar}">
			<Setter Property="Background" Value="#FF3E3E42"/>
			<Setter Property="Foreground" Value="#FF686868"/>
			<Setter Property="BorderBrush" Value="#FF3E3E42"/>
		</Style>
		<Style TargetType="{x:Type DockPanel}">
			<Setter Property="Background" Value="#FF2D2D30"/>
		</Style>
		<Style TargetType="{x:Type Menu}">
			<Setter Property="Background" Value="#FF2D2D30"/>
			<Setter Property="Foreground" Value="#FFF1F1F1"/>
			<Setter Property="BorderBrush" Value="#FF2D2D30"/>
		</Style>
		<Style TargetType="{x:Type MenuItem}">
			<Setter Property="Background" Value="#FF2D2D30"/>
			<Setter Property="Foreground" Value="#FFF1F1F1"/>
			<Setter Property="BorderBrush" Value="#FF2D2D30"/>
		</Style>
		<Style TargetType="{x:Type StatusBar}">
			<Setter Property="Background" Value="#FF2D2D30"/>
			<Setter Property="Foreground" Value="#FFF1F1F1"/>
			<Setter Property="BorderBrush" Value="#FF2D2D30"/>
		</Style>
		<Style TargetType="{x:Type Label}">
			<Setter Property="Foreground" Value="#FFF1F1F1"/>
		</Style>
		<Style TargetType="{x:Type Button}">
			<Setter Property="BorderBrush" Value="#FF3F3F46"/>
			<Setter Property="Foreground" Value="#FFF1F1F1"/>
			<Setter Property="Background" Value="#002D2D30"/>
			<Setter Property="ToolBar.OverflowMode" Value="AsNeeded"/>
		</Style>
		<Style TargetType="{x:Type TextBox}">
			<Setter Property="SpellCheck.IsEnabled" Value="True"/>
			<Setter Property="Language" Value="fr-BE"/>
			<Setter Property="TextWrapping" Value="NoWrap"/>
			<Setter Property="Background" Value="#FF1E1E1E"/>
			<Setter Property="BorderBrush" Value="#FF3F3F46"/>
			<Setter Property="Foreground" Value="#FFF1F1F1"/>
		</Style>
		<Style TargetType="{x:Type ListBox}">
			<Setter Property="Background" Value="#FF1E1E1E"/>
			<Setter Property="Foreground" Value="#FFC2C2C2"/>
			<Setter Property="BorderBrush" Value="#FF3F3F46"/>
		</Style>
	</Window.Resources>
	<Grid>
        
    </Grid>
</Window>
